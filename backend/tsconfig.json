{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": false,

    "strict": false,
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
